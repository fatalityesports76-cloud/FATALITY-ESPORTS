# Copie para .env.local se quiser customizar.

HOST=127.0.0.1
PORTS_HTTP=80,8080
PORTS_HTTPS=443,8443
PUBLIC_PRIMARY_DOMAIN=fatality.local
LOCAL_FALLBACK_DOMAINS=fatality.lvh.me
# Em producao atras de reverse proxy/CDN:
# TRUST_PROXY=1
# USE_CLOUDFLARE_CONNECTING_IP=true
TRUST_PROXY=0
USE_CLOUDFLARE_CONNECTING_IP=false
USE_PLATFORM_TLS=false

# Usuario admin (senha fica em secrets/admin-password.hash)
ADMIN_USERNAME=admin

# Org auth (donos com numeros fixos + confirmacao de e-mail para reset)
ORG_OWNER_FIXED_NUMBERS=900001
ORG_SHOW_DELIVERY_DEBUG=true
ORG_EMAIL_PROVIDER=webhook
ORG_WHATSAPP_PROVIDER=meta_cloud
# ORG_META_WA_PHONE_NUMBER_ID=123456789012345
# ORG_META_WA_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxx
# ORG_META_WA_API_VERSION=v21.0
# ORG_META_WA_GRAPH_BASE_URL=https://graph.facebook.com
# Para validacao de cadastro por e-mail, configure um dos canais abaixo:
# ORG_WHATSAPP_WEBHOOK_URL=https://seu-endpoint-whatsapp.example/send
# ORG_EMAIL_WEBHOOK_URL=https://seu-endpoint-email.example/send
# ORG_RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# ORG_EMAIL_FROM=Fatality E-sports <no-reply@fatality-e-sports-official.com.br>
# ORG_EMAIL_SUBJECT_PREFIX=[Fatality Org]

# Perfil agressivo anti-ataque
MAX_CONNECTIONS_PER_IP=80
MAX_RISK_BEFORE_BLOCK=12
RISK_BLOCK_MS=5400000
RISK_DECAY_MS=600000

SERVER_REQUEST_TIMEOUT_MS=10000
SERVER_HEADERS_TIMEOUT_MS=8000
SERVER_KEEP_ALIVE_TIMEOUT_MS=4000
SERVER_SOCKET_TIMEOUT_MS=10000
SERVER_MAX_REQUESTS_PER_SOCKET=80

# Opcional: sobrescrever localizacao de certificado HTTPS
